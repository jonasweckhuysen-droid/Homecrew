{
  "name": "TodoItem",
  "type": "object",
  "properties": {
    "list_id": {
      "type": "string",
      "description": "Todo list ID"
    },
    "title": {
      "type": "string"
    },
    "assigned_to": {
      "type": "string",
      "description": "Family member name"
    },
    "due_date": {
      "type": "string",
      "format": "date"
    },
    "is_completed": {
      "type": "boolean",
      "default": false
    },
    "priority": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ],
      "default": "medium"
    }
  },
  "required": [
    "list_id",
    "title"
  ]
}
